{
  "name": "waterfall",
  "productName": "Waterfall",
  "version": "0.3.2",
  "description": "Waterfall Node App",
  "main": "./out/main/index.js",
  "author": "Waterfall",
  "homepage": "https://waterfall.network",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:watch": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config electron-builder.yml",
    "build:mac": "electron-vite build && electron-builder --mac --config electron-builder.yml",
    "build:linux": "electron-vite build && electron-builder --linux --config electron-builder.yml"
  },
  "dependencies": {
    "@ant-design/colors": "^7.0.2",
    "@canvasjs/react-charts": "^1.0.0",
    "@canvasjs/react-stockcharts": "^1.0.0",
    "@canvasjs/stockcharts": "^1.7.39",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@tanstack/react-query": "^5.25.0",
    "antd": "^5.13.2",
    "bcrypto": "^5.5.2",
    "better-sqlite3": "^9.4.1",
    "dayjs": "^1.11.10",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "migrate": "^2.1.0",
    "node-gyp": "^9.0.0",
    "react-router-dom": "^6.22.0",
    "rotating-file-stream": "^3.2.1",
    "styled-components": "^6.1.8",
    "web3": "git+https://npm:qfA6p-4tGi7J9qPAfNKv@gitlab.moonion.com/waterfall/web3.git"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tanstack/eslint-plugin-query": "^5.20.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.5",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.5"
  }
}
