{
  "name": "waterfall-app",
  "productName": "Waterfall App",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:watch": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "rm -rf out && rm -rf dist && npm run build && electron-builder --win --config",
    "build:mac": "rm -rf out && rm -rf dist && electron-vite build && electron-builder --mac --config",
    "build:linux": "rm -rf out && rm -rf dist && electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@ant-design/colors": "^7.0.2",
    "@canvasjs/react-charts": "^1.0.0",
    "@canvasjs/react-stockcharts": "^1.0.0",
    "@canvasjs/stockcharts": "^1.7.39",
    "@chainsafe/bls-hd-key": "^0.3.0",
    "@chainsafe/ssz": "^0.14.3",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "antd": "^5.13.2",
    "bcrypto": "^5.5.2",
    "better-sqlite3": "^9.4.1",
    "bip39": "^3.1.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.7",
    "ethers": "^6.11.1",
    "migrate": "^2.1.0",
    "react-router-dom": "^6.22.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^18.19.5",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.5",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "buildDependenciesFromSource": true,
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/genesis",
        "to": "Resources/genesis",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
